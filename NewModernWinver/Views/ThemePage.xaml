<Page
    x:Class="NewModernWinver.Views.ThemePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewModernWinver.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background ="Transparent" Foreground="{ThemeResource SystemColorDisabledTextColor}">
    <Grid>
        <ScrollViewer>
            <Grid HorizontalAlignment="Center" Width="436">
                <TextBlock x:Name="labelTitle" Text="Themes and Colours"  HorizontalAlignment="Left" Margin="13,10,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Variable Display Semibold" FontSize="18" FontWeight="SemiBold" Foreground="{ThemeResource SystemBaseHighColor}"/>
                <TextBlock x:Name="valueCurrentTheme" Text="Current Theme: [unavailable]" Margin="13,37,0,0" Foreground="{ThemeResource SystemBaseMediumColor}" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Rectangle x:Name="bgRect" Margin="4,69,4,0" RadiusX="8" RadiusY="8" Fill="#37404040" Height="334" VerticalAlignment="Top" Stroke="#17606060" StrokeThickness="2"/>

                <Rectangle x:Name="wallpaperRectangle" RadiusX="7" RadiusY="7" HorizontalAlignment="Stretch" Margin="13,107,174,0" VerticalAlignment="Top" Height="138" Width="245">
                    <Rectangle.Fill>
                        <ImageBrush x:Name="valueWallpaper" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock x:Name="labelWallpaper" Text="Wallpaper" HorizontalAlignment="Left" Margin="13,76,0,0" VerticalAlignment="Top" Foreground="{ThemeResource SystemBaseHighColor}"/>
                <Button x:Name="buttonOpen" Content="Open original" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="284,133,0,0" VerticalAlignment="Top" Width="140"/>
                <Button x:Name="buttonPersonalisation" Content="Change in Settings" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="284,185,0,0" VerticalAlignment="Top" Width="140"/>

                <TextBlock x:Name="labelPrimaryAccent" Text="Primary accent colour" HorizontalAlignment="Left" Margin="13,267,0,0" VerticalAlignment="Top" Foreground="{ThemeResource SystemBaseHighColor}"/>
                <Rectangle x:Name="rectPrimaryAccent" Fill="{ThemeResource SystemControlBackgroundAccentBrush}" HorizontalAlignment="Left" RadiusX="4" RadiusY="4" Height="32" Width="32" Margin="227,261,0,0" Stroke="{ThemeResource SystemBaseMediumColor}" VerticalAlignment="Top" />
                <!--<TextBox x:Name="textBoxPrimaryAccent" HorizontalAlignment="Left" Height="23" Margin="264,281,0,0" TextWrapping="Wrap" Text="#0078D7" VerticalAlignment="Top" Width="80"/>-->
                <Button x:Name="buttonUpdatePrimaryAccent" Content="Update in Settings" HorizontalAlignment="Left" Margin="264,261,0,0" VerticalAlignment="Top" Width="160" Height="32"/>
                <Rectangle x:Name="rectSecondaryAccent" HorizontalAlignment="Left" RadiusX="4" RadiusY="4" Height="32" Width="32" Margin="227,313,0,0" Stroke="{ThemeResource SystemBaseMediumColor}" VerticalAlignment="Top" >
                    <Rectangle.Fill>
                        <SolidColorBrush x:Name="secondaryRectColour"/>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock x:Name="labelSecondaryAccent" Text="Secondary accent colour" HorizontalAlignment="Left" Margin="13,319,0,0" VerticalAlignment="Top" Foreground="{ThemeResource SystemBaseHighColor}"/>
                <TextBox x:Name="textBoxSecondaryAccent" HorizontalAlignment="Left" Height="23" Margin="264,313,0,0" TextWrapping="Wrap" Text="#??????
                 " VerticalAlignment="Top" Width="80"/>
                <Button x:Name="buttonUpdateSecondaryAccent" Content="Update" HorizontalAlignment="Left" Margin="349,313,0,0" VerticalAlignment="Top" Width="75" Height="32"/>
                <TextBlock x:Name="labelResetNote" Text="Changes will take effect after you sign out and back in." Margin="13,355,0,0" Foreground="{ThemeResource SystemBaseMediumColor}" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBlock x:Name="labelResetNote2" Text="Windows may hang briefly when updating. Shift+click to reset." Margin="13,374,0,0" Foreground="{ThemeResource SystemBaseMediumColor}" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
